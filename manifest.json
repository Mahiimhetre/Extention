{
  "manifest_version": 3,
  "name": "Extention",
  "short_name": "Locator-X",
  "author": "Mr.Mahesh",
  "version": "1",
  "description": "Advanced XPath and CSS selector generator with interception detection.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "My Custom Selector Extension"
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "exclude_matches": [
        "*://chrome.google.com/webstore/*",
        "*://chromewebstore.google.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-capture-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Toggle Capture Mode"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/highlight.css", "src/content-iframe.js"],
      "matches": ["<all_urls>"]
    }
  ]
}